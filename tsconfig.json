{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./bin/*",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
